<div data-controller="users-by-email-auth">
  <div>
    <div class="flex">
      <div class="flex-none cursor-pointer" data-modal-target="closeButton">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
      <div class="grow">
        <h3 class="text-md mb-4 text-center font-bold leading-6 text-gray-900" id="modal-title">Log in or sign up</h3>
      </div>
    </div>
    <div class="relative">
      <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-gray-300"></div>
      </div>
    </div>

    <div class="pt-4">
      <h4 class="text-xl leading-6 text-gray-900 mt-2 font-semibold">Welcome to Airbnb</h4>
      <!--
                  This example requires some changes to your config:
                  
                  ```
                  // tailwind.config.js
                  module.exports = {
                    // ...
                    plugins: [
                      // ...
                      require('@tailwindcss/forms'),
                    ],
                  }
                  ```
                -->
      <div data-users-by-email-auth-target="emailWrapper" class="relative mt-6 rounded-md border border-gray-300 px-3 py-2 shadow-sm focus-within:border-black focus-within:ring-1 focus-within:ring-black">
        <label for="email" class="block text-xs font-medium text-gray-900">Email</label>
        <input data-users-by-email-auth-target="email" type="text" name="email" id="email" class="block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 sm:text-sm" placeholder="Jane.smith@gmail.com" />
            <div data-users-by-email-auth-target="invalidSvg" class="hidden pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
              <!-- Heroicon name: mini/exclamation-circle -->
              <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
            </div>
      </div>
        <p data-users-by-email-auth-target="errorMsg" class="hidden mt-2 text-sm text-red-600" id="email-error">Please enter a valid email address.</p>
    </div>
  </div>
  <div class="my-5 sm:my-6">
    <button
      data-users-by-email-auth-target="submit"
      type="button"
      class="w-full justify-center inline-flex items-center rounded-md border border-transparent px-6 py-3 text-base font-medium text-white shadow-sm focus:outline-none focus:ring-2 airbnb-pink-gradient focus:ring-offset-2"
    >
      Continue
    </button>
  </div>
</div>
<div class="relative">
  <div class="absolute inset-0 flex items-center" aria-hidden="true">
    <div class="w-full border-t border-gray-300"></div>
  </div>
  <div class="relative flex justify-center">
    <span class="bg-white px-2 text-sm text-gray-500">or</span>
  </div>
</div>
<div class="mt-5 sm:mt-6">
  <button
    type="button"
    class="w-full justify-center inline-flex items-center rounded-md border-2 border-solid border-gray-900 bg-white px-6 py-3 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 font-semibold"
  >
    Continue with Facebook
  </button>
</div>
