<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign Up</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or
        <%= link_to "Login", new_user_session_path, class: "font-medium text-red-600 hover:text-red-500" %>
      </p>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="-space-y-px rounded-md shadow-sm">
          <div>
            <%= f.label :email, "Email address", class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:outline-none sm:text-sm", placeholder:"Email address" %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "sr-only" %>
            <%= f.password_field :password, class: "relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:outline-none sm:text-sm", placeholder:"Password" %>
          </div>
        </div>
          <div>
            <%= f.submit "Sign up", class: "group relative flex w-full justify-center rounded-md border border-transparent py-2 px-4 text-sm font-medium text-white  focus:outline-none focus:ring-2 focus:ring-offset-2 airbnb-pink-gradient" %>
          </div>
        <% end %>
    </div>
</div>